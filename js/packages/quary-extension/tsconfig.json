{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "paths": {
      "@shared/*": ["../quary-extension-bus/src/*"],
      "@quary/proto/*": ["../proto/src/generated/*"]
    }
  },
  "include": ["src/**/*", "../quary-extension-bus/src", "../proto/src/**/*"]
}
