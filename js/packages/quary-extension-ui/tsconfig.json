{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/*"],
      "@shared/*": ["../quary-extension-bus/src/*"],
      "@quary/proto/*": ["../proto/src/generated/*"]
    }
  },

  "include": ["./src/*", "../quary-extension-bus/src", "../proto/src/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
